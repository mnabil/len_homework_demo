[sqlfluff]
templater = jinja

sql_file_exts = ".sql,.sql.j2,.dml,.ddl"

dialect = snowflake


[sqlfluff:rules:L010]
capitalisation_policy = lower

[sqlfluff:rules:L030]
capitalisation_policy = lower

[sqlfluff.templater.dbt]
project_dir = "."
profile = "snowflake"

[sqlfluff:layout:type:comma]
spacing_before = touch
line_position = trailing