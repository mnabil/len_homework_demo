[sqlfluff]
templater = "dbt"

sql_file_exts = ".sql,.sql.j2,.dml,.ddl"

dialect = "snowflake"
[sqlfluff:rules]

comma_style = leading

[sqlfluff:rules:L010]
capitalisation_policy = lower

[sqlfluff:rules:L030]
capitalisation_policy = lower

[sqlfluff.templater.dbt]
project_dir = "."
profile = "snowflake"